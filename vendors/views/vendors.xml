<!-- inheriting customer invoice  -->
<record id="customer_invoice_tree_inherit" model="ir.ui.view">
    <field name="name">account.out.invoice.tree.inherit</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_out_invoice_tree"/>
    <field name="arch" type="xml">
        <field name="name" position="attributes">
            <attribute name="optional">Hide</attribute>
        </field>
        <field name="invoice_partner_display_name" position="attributes">
            <attribute name="optional">Hide</attribute>
        </field>
        <field name="activity_ids" position="attributes">
            <attribute name="optional">Hide</attribute>
        </field>
        <field name="amount_untaxed_signed" position="attributes">
            <attribute name="optional">Hide</attribute>
        </field>
        <field name="payment_state" position="attributes">
            <attribute name="optional">Hide</attribute>
        </field>
        <field name="state" position="attributes">
            <attribute name="optional">Hide</attribute>
        </field>
        <field name="ref" position="attributes">
            <attribute name="optional">Show</attribute>
        </field>

        <xpath expr="//field[@name='invoice_date']" position="before">
            <field name="company_id" string="St"/>
            <field name="name" string="Doc#"/>
            <field name="type_name" string="Type"/>
        </xpath>
        <xpath expr="//field[@name='invoice_date_due']" position="after">
            <field name="amount_total" string="Balance"/>
            <field name="discount_allowed"/>
            <field name="discount_take"/>
            <field name="allowance"/>
            <field name="amount_paid"/>
            <field name="amount_untaxed" string="Net Balance"/>
            <field name="days_past_disc"/>
            <field name="action"/>
            <field name="partner_id" string="customer id"/>
            <field name="state" string="Open Item"/>
            <field name="amount_residual_signed" string="Now Due"/>
            <field name="stmnt_disc"/>
            <field name="running_bal"/>
            <field name="stmt_disc"/>
            <field name="last_pay_date"/>
        </xpath>
        <xpath expr="//field[@name='ref']" position="after">
            <field name="ar_note"/>
        </xpath>
            
    </field>
</record>

<record id="account.menu_action_move_out_invoice_type" model="ir.ui.menu">
