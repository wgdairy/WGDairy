            </xpath>


            <xpath expr="//page[@id='invoice_tab']" position="attributes">
                <attribute name="attrs">{'invisible':[('transaction_type', '=', 'journal_transaction'),('move_type', 'not in' ,( 'out_invoice','out_refund','in_refund','in_receipt','out_receipt'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="summary_of_work" string="Note"/>
